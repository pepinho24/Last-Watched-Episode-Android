<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Change the background of application"
        android:id="@+id/lwe_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_background_image"
        android:layout_below="@+id/lwe_title"
        android:layout_centerHorizontal="true"
        android:minHeight="300dp"
        android:minWidth="300dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_background_image"
        android:text="Take picture"
        android:id="@+id/btn_take_picture"
        android:layout_centerHorizontal="true"
        android:onClick="OnTakePictureClick"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add from gallery"
        android:id="@+id/btn_add_from_gallery"
        android:layout_below="@+id/btn_take_picture"
        android:layout_centerHorizontal="true"
        android:onClick="OnAddFromGalleryClick"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Set default background"
        android:id="@+id/btn_default_background"
        android:layout_below="@+id/btn_add_from_gallery"
        android:layout_centerHorizontal="true"
        android:onClick="OnDefaultBackgroundClick"/>

</RelativeLayout>
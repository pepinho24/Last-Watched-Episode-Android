<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="Add new show to collection"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Show Title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:capitalize="sentences" />

    <EditText
        android:id="@+id/input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:hint="Enter Title"
        android:capitalize="sentences"
        android:inputType="textCapSentences"
        android:focusable="true" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Show Description"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Show Description"
        android:inputType="text|textMultiLine|textCapSentences"
        android:lines="5"
        android:capitalize="sentences" />

    <TextView
        android:id="@+id/textViewAirWeekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Air Week day"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <!--<EditText-->
        <!--android:id="@+id/input_airweekday"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_margin="10dp"-->
        <!--android:hint="Enter Week Day"-->
        <!--android:capitalize="sentences"-->
        <!--android:focusable="false"-->
        <!--android:inputType="textCapSentences" />-->

    <Spinner
        android:id="@+id/spinner_airweekday"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:dropDownVerticalOffset="10dp"
        android:spinnerMode="dialog"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:layout_weight="0.08" />

    <Button
        android:id="@+id/btn_add_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:background="#80f445"
        android:text="Add show to collection" />
</LinearLayout>